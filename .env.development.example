# Development Environment Variables
# Copy this file to .env for local development

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Frontend URL (HTTP is acceptable for local development)
FRONTEND_URL=http://localhost:3000

# API Base URL for frontend (HTTP is acceptable for local development)
VITE_API_BASE_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=your-local-database-url

# JWT Configuration (use simpler secrets for development)
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-production

# Security Configuration (relaxed for development)
SECURE_COOKIES=false
COOKIE_DOMAIN=localhost

# Development Settings
TRUST_PROXY=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000  # Higher limit for development

# External Services (if applicable)
CLAUDE_API_KEY=your-claude-api-key-if-using
