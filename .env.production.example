# Production Environment Variables
# Copy this file to .env and configure for your production deployment

# Application Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Frontend URL (must use HTTPS in production)
FRONTEND_URL=https://your-production-domain.com

# API Base URL for frontend (must use HTTPS in production)
VITE_API_BASE_URL=https://your-api-domain.com

# Database Configuration
DATABASE_URL=your-production-database-url

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-characters-long

# Security Configuration
SECURE_COOKIES=true
COOKIE_DOMAIN=.your-domain.com

# Optional: Additional Security
TRUST_PROXY=true  # Set to true if behind a reverse proxy
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# External Services (if applicable)
CLAUDE_API_KEY=your-claude-api-key-if-using
